@inject WorkMarketingNet.Localization.Core.ILocalizationService Localization

@functions{
	string T(string text, params object[] args) { return Localization.Translate(text, args); }
}

<section data-route="person-details">
	<h2 class="paper-font-display2">@T("Person")</h2>
	<wmn-person name="{{params.name}}"></wmn-person> @*params is route (url) parameters*@
</section>